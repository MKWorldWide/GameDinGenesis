{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "scripts/**/*",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ]
}
